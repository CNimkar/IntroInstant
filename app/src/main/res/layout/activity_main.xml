<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:id="@+id/myPicture"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_launcher_background"
        android:layout_marginStart="120dp"
        android:layout_marginTop="25dp"

        />


    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/myPicture"
        android:layout_marginLeft="127dp"
        android:layout_marginTop="10dp"
        android:text="Chai Nimkar"
        android:fontFamily="@font/invitation"
        android:textSize="55dp"
        android:textColor="@color/black"
        />

    <View
        android:layout_below="@id/name"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"/>

    <ImageView
        android:id="@+id/androidify"
        android:layout_below="@id/name"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_launcher_background"
        />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_toRightOf="@id/androidify"
        android:layout_alignTop="@id/androidify"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="5dp"
        android:text="I'm the droid you're looking for"
        android:fontFamily="sans-serif"
        android:textSize="20dp"
        />

    <View
        android:layout_below="@id/androidify"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"/>

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/androidify"
            android:layout_marginTop="25dp"

            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:text="@string/introduction"
            android:fontFamily="sans-serif"
            android:textSize="20dp"
            />



    </RelativeLayout>


</ScrollView>